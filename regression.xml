<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Regression Suite">
	
	<listeners>
		<listener class-name="com.hrms.testbase.Listener" /> <!-- location of Listener -->
	</listeners>
	
	<test name="Regression Test"> 
		
		<groups>
			<run>
				<include name="regression"/> <!-- what are we going to listen to -->
			</run>
		</groups>
		
		<packages>
			<package name="com.hrms.testcases" /> <!-- where -->
		</packages>
		
	</test> <!-- Test -->
</suite> <!-- Suite -->
